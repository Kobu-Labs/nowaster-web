generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = "***"
}

model User {
    id              String            @id @default(uuid())
    userName        String
    email           String
    hashedPassword  String
    salt            String
    avatar          String?
    solidEntities   ScheduledEntity[]
    recordEntities  RecordedEntity[]
    userToGroups    UserToGroup[]
}

model UserToGroup {
    id      String @id @default(uuid())
    userId  String
    groupId String
    user    User   @relation(fields: [userId], references: [id])
    group   Group @relation(fields: [groupId], references: [id])
}

model Group {
    id           String        @id @default(uuid())
    creatorId    String
    groupName    String
    userToGroups UserToGroup[]
}

model ScheduledEntity {
    id          String   @id @default(uuid())
    userId      String
    startTime   DateTime
    endTime     DateTime
    category    String
    description String?
    user        User     @relation(fields: [userId], references: [id])
}

model RecordedEntity {
    id          String   @id @default(uuid())
    userId      String
    startTime   DateTime
    category    String
    description String?
    user        User     @relation(fields: [userId], references: [id])
}
